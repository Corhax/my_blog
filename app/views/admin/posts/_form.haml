= form_for [:admin, @post] do |f|
  - if @post.errors.any?
    %h2
      = pluralize(@post.errors.count, "error")
      prevted this post from saving:
    %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg

  = f.label :title
  %br
  = f.text_field :title

  %br
  %br

  = f.label :content, "Write your article here"
  %br
  = f.text_area :body

  %br
  %br

  = f.submit
